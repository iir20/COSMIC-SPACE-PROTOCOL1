{
  "name": "cosmic-space-protocol",
  "version": "1.0.0",
  "description": "A web-based mining interface for the Cosmic Space Protocol",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step required'",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "node scripts/fix-lint.js",
    "format": "prettier --write \"**/*.{js,html,css}\"",
    "prepare": "node scripts/setup-husky.js"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "core-js": "^3.34.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.2",
    "web3": "^1.10.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "babel-jest": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": ["<rootDir>/jest.setup.js"],
    "collectCoverageFrom": [
      "public/js/**/*.js",
      "!public/js/**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iir20/COSMIC-SPACE-PROTOCOL1.git"
  },
  "keywords": [
    "blockchain",
    "mining",
    "web3",
    "cryptocurrency",
    "cosmic"
  ],
  "author": "COSMIC SPACE PROTOCOL",
  "license": "MIT"
}
